<html lang='en'>

<head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />

    <style>
        body {
            margin: 0;
            padding: 0;
            background: #f3f4fa;
            font-family: monospace;
            font-weight: 600;
        }

        img {
            max-width: 100%;
            display: block;
        }

        .container {
            max-width: 650px;
            margin: 0 auto;
            background: #ffffff;
            border-radius: 18px;
            overflow: hidden;
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.07);
        }

        /* HEADER */
        .header {
            background: linear-gradient(135deg, #dc3173, #a80e52);
            padding: 22px 30px;
        }

        .header-left img {
            width: 70px;
            height: auto;
        }

        .header-date {
            color: #ffffff;
            font-size: 15px;
            white-space: nowrap;
        }

        /* BODY */
        .middle {
            background: #fae0ea;
        }

        .title {
            text-align: center;
            font-size: 24px;
            font-weight: bold;
            padding: 25px 0 15px;
            color: #1e1e1e;
        }

        .content {
            padding: 0 30px 25px 30px;
            font-size: 17px;
            color: #333333;
            line-height: 1.7;
        }

        .message-box {
            background: #fafafa;
            border: 1px solid #e0e0e0;
            border-radius: 10px;
            padding: 18px;
            margin: 10px 30px 25px 30px;
            color: #444;
            font-size: 16px;
            line-height: 1.6;
        }

        .highlight {
            color: #dc3173;
            font-weight: 700;
        }

        /* SOCIAL */
        .social-section {
            text-align: center;
            padding: 20px 0;
            background: #fae0ea;
        }

        .social-section img {
            width: 34px;
        }

        /* FOOTER */
        .footer {
            font-size: 14px;
            text-align: center;
            color: #666;
            padding: 15px 30px 25px 30px;
            border-top: 1px solid #e4e4e4;
            background: #fae0ea;
        }

        /* RESPONSIVE */
        @media only screen and (max-width: 480px) {
            .header-left img {
                width: 42px !important;
            }

            .title {
                font-size: 22px !important;
            }

            .content {
                padding: 0 20px 25px 20px !important;
                font-size: 16px !important;
            }

            .message-box {
                margin: 10px 20px 25px 20px !important;
            }

            .footer {
                padding: 10px 20px 20px 20px !important;
            }
        }
    </style>
</head>

<body>
    <br />

    <div class='container'>
        <!-- HEADER -->
        <div class='header'>
            <table width='100%' cellspacing='0' cellpadding='0'>
                <tr>
                    <td align='left' style='vertical-align:middle;'>
                        <img src='https://res.cloudinary.com/duagqnvpw/image/upload/v1763599290/DeliGo-White_cfd6my.png'
                            alt='DeliGo Logo' width='70' />
                    </td>

                    <td align='right' style='vertical-align:middle; color:#fff; font-size:15px; white-space:nowrap;'>
                        {{date}}
                    </td>
                </tr>
            </table>
        </div>

        <!-- BODY -->
        <div class='middle'>
            <div class='title'>New Contact Form Message</div>

            <div class='content'>
                <strong>Sender Details</strong><br /><br />
                <span class='highlight'>Name:</span> {{name}}<br />
                <span class='highlight'>Email:</span> {{sender}}
            </div>

            <div class='content'>
                <strong>Message</strong>
            </div>

            <div class='message-box'>
                {{message}}
            </div>

            <div class='content'>
                Please reply to this message as soon as possible.
                <br /><br />
                Regards,<br />
                Team DeliGo
            </div>
        </div>

        <!-- SOCIAL -->
        <div class='social-section'>
            <table role='presentation' cellspacing='0' cellpadding='0' border='0' align='center'>
                <tr>
                    <td align='center' style='padding: 0 8px;'>
                        <a href='https://www.facebook.com/deligoeu' target='_blank'>
                            <img src='https://res.cloudinary.com/duagqnvpw/image/upload/v1763520442/facebook_pcla1y.png'
                                alt='Facebook' />
                        </a>
                    </td>

                    <td align='center' style='padding: 0 8px;'>
                        <a href='https://www.youtube.com/@DeliGoPT' target='_blank'>
                            <img src='https://res.cloudinary.com/duagqnvpw/image/upload/v1763520442/youtube_f3hzep.png'
                                alt='Youtube' />
                        </a>
                    </td>

                    <td align='center' style='padding: 0 8px;'>
                        <a href='https://www.linkedin.com/in/deligopt' target='_blank'>
                            <img src='https://res.cloudinary.com/duagqnvpw/image/upload/v1763520442/linkedin_bhmzdk.png'
                                alt='LinkedIn' />
                        </a>
                    </td>

                    <td align='center' style='padding: 0 8px;'>
                        <a href='https://www.instagram.com/deligo.pt/#' target='_blank'>
                            <img src='https://res.cloudinary.com/duagqnvpw/image/upload/v1763520443/instagram_lwmdxa.png'
                                alt='Instagram' />
                        </a>
                    </td>
                </tr>
            </table>
        </div>

        <!-- FOOTER -->
        <div class='footer'>
            Website: https://deligo.pt | Phone: +351 217 570 184 | +351 920 136 680<br />
            Address: Rua Joaquim Agostinho 16C 1750-126 Lisbon, Portugal
            <p>&copy; {{currentYear}} DeliGo. All rights reserved.</p>
        </div>
    </div>

    <br />
</body>

</html>